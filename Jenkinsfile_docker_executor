pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
        upstream(upstreamProjects: 'docker-base', threshold: hudson.model.Result.SUCCESS)
    }
    stages {
        stage('build') {
            steps {
                sh "docker build -t api_test_executor . -f Dockerfile_executor"
            }
        }
    }
}