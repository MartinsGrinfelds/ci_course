pipeline {
    agent any
    triggers {
        pollSCM('*/1 * * * *')
    }
    stages {
        stage('build') {
            steps {
                echo "Building node application"
            }
        }
        
        stage('deploy-dev') {
            steps {
                script {
                    deploy("DEV")
                }
            }
        }
        stage('test-dev') {
            steps {
                script {
                    test("INT")
                }
            }
        }
        stage('deploy-int') {
            steps {
                script {
                    deploy("INT")
                }
            }
        }
        stage('test-int') {
            steps {
                script {
                    test("INT")
                }
            }
        }
        stage('deploy-prd') {
            steps {
                script {
                    deploy("INT")
                }
            }
        }
        stage('test-prd') {
            steps {
                script {
                    test("INT")
                }
            }
        }
    }
}

def deploy(String environment) {
    echo "Deployment on ${environment} environment triggered..."
    build job: "ui-tests", parameters: [string(name: "ENVIRONMENT", value: "${environment}")]
}

def test(String environment) {
    echo "Running tests on ${environment} environment..."
    sh "docker run --network=host -d -t api_test_executor_$(environment) api_test_executor"
    sh "docker exec api_testexecutor${environment} cucumber --tags=@${environment} --format html --out test-output/report.html"
    sh "docker cp api_test_executor_${environment}:/usr/src/api-tests/test-output/report.html report_${environment}.html"
    sh "docker rm -f api_test_executor_${environment}"
}